</head>
<body>

    <div id="wrapper">
        <header class="tech-header header">
            <div class="container-fluid">
                <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand" ><img src="../images/version/BonPlan.png"></a>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('main') }}">Menu</a>
                            </li>
                           {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('news') }}">Ajouter Plat</a>
                            </li>                   
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('mynews') }}">Mes Plats</a>
                            </li>
                            {% endif %}
                            
                        </ul>
                        <ul class="nav nav-pills">
                        
                        {% if app.user %}
                        <li class="nav-item">
                                <a class="nav-link active" href="{{ path('fos_user_security_logout') }}">DÃ©connexion</a>
                              </li>
                        {% else %}
                            <li class="nav-item">
                              <a class="nav-link active" href="{{ path('connexion') }}">Connexion</a>
                            </li>   
                            <li class="nav-item">
                              <a class="nav-link" href="{{ path('enreg') }}">S'inscrire?</a>
                            </li>
                        {% endif %}
                            
                            
                            
                           
                        </ul>
                    </div>
                </nav>
            </div><!-- end container-fluid -->
        </header><!-- end market-header -->


        <section class="section single-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                        <div class="page-wrapper">
                            <div class="blog-title-area text-center">
                             {% for c in new.categories %}
                                <span class="color-orange"><a href="" title="">{{c.name}}</a></span>
                                {% endfor %}
                                <h3>{{new.title}}</h3>

                                <div class="blog-meta big-meta">
                                    <small><a href="tech-single.html" title="">{{new.date|date('Y-m-d') }}</a></small>
                                    
                                    {% for u in new.user %}
                                    <small><a  title="">{{u.username}}</a></small>
                                    {% endfor %}
                                    <small><a href="#" title=""><i class="fa fa-eye"></i> {{new.id}}</a></small>
                                </div><!-- end meta -->

                                
                            </div><!-- end title -->

                            <div class="single-post-media">
                                <img src="../img/{{new.image}}" alt="" class="img-fluid">
                            </div><!-- end media -->

                            <div class="blog-content">  
                                
                                      {{new.subject | raw  }}
                                                                    

                            </div><!-- end content -->

                            
                        </div><!-- end page-wrapper -->
                    </div><!-- end col -->
                </div>
                    

                            
            </div><!-- end container -->
        </footer><!-- end footer -->

        <div class="dmtop">Scroll to Top</div>
        
    </div><!-- end wrapper -->

