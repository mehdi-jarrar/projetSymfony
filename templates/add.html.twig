<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width-device-width, initial-scale-1.0">
    <meta http-equiv="X-UA-Compatible" content="ie-edge">
    <link href="css/bootstrap.css" rel="stylesheet">
    <script src="ckeditor/ckeditor.js"></script>

</head>
    <body>
            <form class="form-container" action="{{ path('adddishfunction') }}" enctype="multipart/form-data" method="POST">
                    <div class="form-group">
                      <strong><label for="title">Plat</label></strong>
                      <input type="text" class="form-control" id="title" placeholder="Write your title" name="title">
                    </div>
                    <div class="form-group">
                            <strong><label for="exampleFormControlSelect1">Sucré / salé </label></strong>
                      <select class="form-control" name="category" id="exampleFormControlSelect1" required>
                        {% for c in cat %}
                        <option value = "{{c.id}}" >{{ c.name }}</option>
                        {% endfor %}
                      </select>
                    </div>
                    
                    <div class="form-group">
                      <strong><label>Description</label></strong>
                      <textarea class="form-control" id="editor1" name="editor1" rows="10"></textarea>
                    </div>
                    <div class="form-group">
                            <strong><label for="image">Insert image</label></strong>
                            <input type="file" class="form-control-file" id="image" name="image">
                          </div>
                          <button type="submit" class="btn btn-primary">Add</button>
                          <script>
                                // Replace the <textarea id="editor1"> with a CKEditor
                                // instance, using default configuration.
                                CKEDITOR.replace( 'editor1' );
                            </script>
                  </form>
    </body>
